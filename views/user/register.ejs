<div class="mx-auto width-50">
    <form class="orange-text margin-top-20" action="/auth/register" method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" placeholder="moshimoshi" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" placeholder="******" required>
        </div>
        <div class="form-group">
            <label for="password">Re-enter password</label>
            <input class="form-control" type="password" name="re-password" placeholder="******" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" placeholder="moshimoshi@moshi.com" required>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input class="form-control" type="text" name="address" placeholder="Hougang Ave 3, Blk 634 #03-01" required>
        </div>
        <a class="margin-top-neg display-block float-right orange-text" href="/auth/login">Login</a>
        </br>
        <div class="form-group">
            <button class="display-block btn-gradient btn-border-gradient" type="submit">Register</button>
        </div>
    </form>
</div>