<div class="mx-auto">
    <form class="orange-text margin-top-20" action="/auth/login" method="post">
        <div class="form-group">
            <label>Username:</label>
            <input class="form-control" type="text" name="username"/>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input class="form-control" type="password" name="password"/>
        </div>
        <a class="margin-top-neg display-block float-right orange-text" href="/auth/register">Register</a>
        </br>
        <div class="form-group">
            <button class="display-block btn-gradient btn-border-gradient" type="submit">Login</button>
        </div>
    </form>
</div>