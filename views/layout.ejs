<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Breakie!</title>
</head>
<header>
    <% if (alerts.error) { %> 
        <% alerts.error.forEach( err => { %> 
            <div class="alert alert-danger mb-0">
                <%= err %> 
            </div>
        <% }) %>
    <% } %>
    <% if (alerts.success) { %> 
        <% alerts.success.forEach( succ => { %> 
            <div class="alert alert-primary mb-0">
                <%= succ %> 
            </div>
        <% }) %>
    <% } %>
    <nav class="navbar">
        <a id="header-breakie" href="/">breakie</a>
        
        <% if (currentUser == null) { %>
            <a href="/auth/login">login</a>
        <% } else { %>
            <ul class="navbar-right">
                <!-- <p>Welcome back!  </p> -->
                <% if (currentUser != null) { %> 
                    <div class="btn-group">
                        <button type="button" class="btn-original btn-border-gradient dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @<%= currentUser.username %>
                        </button>
                        <div class="dropdown-menu">
                          <a class="dropdown-item" href="/order/">Orders</a>
                          <a class="dropdown-item" href="/user/list/">My listings</a>
                          <a class="dropdown-item" href="/breakie/new/">New breakie</a>
                          <div class="dropdown-divider"></div>
                          <a class="dropdown-item" href="#">Settings</a>
                          <a class="dropdown-item" href="/auth/logout">Logout</a>
                        </div>
                    </div>
                    <span></span>
                <% } %>     
            </ul>
        <% } %>
    </nav>

</header>
<body>
    <div id="container" class="container">
        <div class="row">
            <%- body %>
        </div> 
    </div>
    <script
        src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
    <script href="https://cdnjs.cloudflare.com/ajax/libs/es6-promise/4.1.1/es6-promise.auto.js"></script>    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/js/all.min.js"></script>
    <script src="/script.js" defer></script>
</body>
</html>